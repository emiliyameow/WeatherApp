<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_blue">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Москва"
            android:id="@+id/city"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:paddingTop="15dp"
            android:textSize="25sp"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-13°"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="45sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Преимущественно облачно"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20sp"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Макс: -11°, мин: -16°"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20sp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/roundedshadow"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"

                android:text="Ожидается облачная погода около 20:00"
                android:textColor="@color/white"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/roundedshadow"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Прогноз на 5 дней"
                android:textColor="@color/white"/>
            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundedshadow"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="5dp"
                android:orientation="vertical"
                android:layout_marginVertical="5dp"
                android:padding="15dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ЗАХОД СОЛНЦА"

                    android:textSize="15sp"
                    android:textColor="@color/text_headings"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="18:01"
                    android:padding="5dp"
                    android:textSize="25sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Восход: 07:22"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundedshadow"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical"
                android:layout_marginVertical="5dp"
                android:padding="15dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ВИДИМОСТЬ"
                    android:textSize="15sp"
                    android:textColor="@color/text_headings"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="25 км"
                    android:padding="5dp"
                    android:textSize="25sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Сейчас совершенно ясно."
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundedshadow"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="5dp"
                android:orientation="vertical"
                android:layout_marginVertical="5dp"
                android:padding="15dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ВЕТЕР"

                    android:textSize="15sp"
                    android:textColor="@color/text_headings"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="З -> В"
                    android:padding="5dp"
                    android:textSize="25sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7 м/с"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundedshadow"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical"
                android:layout_marginVertical="5dp"
                android:padding="15dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ОСАДКИ"
                    android:textSize="15sp"
                    android:textColor="@color/text_headings"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="0 мм"
                    android:padding="5dp"
                    android:textSize="25sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="В близжайшие 24 часа ожидаются осадки (6 мм)."
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundedshadow"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="5dp"
                android:orientation="vertical"
                android:layout_marginVertical="5dp"
                android:padding="15dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ОЩУЩАЕТСЯ КАК"
                    android:textSize="15sp"
                    android:textColor="@color/text_headings"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="-12°"
                    android:padding="5dp"
                    android:textSize="25sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Из-за ветра кажется, что холоднее."
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundedshadow"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical"
                android:layout_marginVertical="5dp"
                android:padding="15dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ВЛАЖНОСТЬ"
                    android:textSize="15sp"
                    android:textColor="@color/text_headings"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="79%"
                    android:padding="5dp"
                    android:textSize="25sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Точка росы сейчас: -8°"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>