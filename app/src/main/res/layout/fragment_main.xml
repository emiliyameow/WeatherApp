<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollViewBackground"
    android:background="@drawable/back_clean_day">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_weight="1">

            </LinearLayout>

            <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Город"
            android:layout_weight="2"
            android:id="@+id/city"
            android:textColor="@color/white"
                android:textAlignment="center"
            android:layout_gravity="center"
            android:paddingTop="15dp"
            android:textSize="25sp"

            />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@null"
                android:layout_marginBottom="5dp"
                android:id="@+id/search_button"
                android:layout_gravity="bottom"
                android:src="@drawable/baseline_search_24"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- -"
            android:id="@+id/currentTemp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="45sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Преимущественно облачно"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20sp"
            android:visibility="gone"
            android:id="@+id/weather"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Макс.: -11°, мин.: -16°"
            android:textColor="@color/white"
            android:visibility="gone"
            android:id="@+id/maxAndMinTemp"
            android:textAlignment="center"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/weather_daily"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:visibility="gone"
            android:background="@drawable/roundedshadow"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginHorizontal="5dp"
                android:text="Прогноз на неделю"
                android:textColor="@color/white"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/daily_forecast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sunset_and_visibility"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundedshadow"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="5dp"
                android:orientation="vertical"
                android:layout_marginVertical="5dp"
                android:padding="15dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ЗАХОД СОЛНЦА"

                    android:textSize="15sp"
                    android:textColor="@color/text_headings"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="18:01"
                    android:id="@+id/sunset"
                    android:padding="5dp"
                    android:textSize="25sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Восход: 07:22"
                    android:id="@+id/sunrise"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundedshadow"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical"
                android:layout_marginVertical="5dp"
                android:padding="15dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ВИДИМОСТЬ"
                    android:textSize="15sp"
                    android:textColor="@color/text_headings"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="25 км"
                    android:padding="5dp"
                    android:id="@+id/visibility"
                    android:textSize="25sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Сейчас совершенно ясно."
                    android:textSize="15sp"
                    android:id="@+id/visibility_description"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/wind_and_cloudiness"
            android:visibility="gone"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundedshadow"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="5dp"
                android:orientation="vertical"
                android:layout_marginVertical="5dp"
                android:padding="15dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ВЕТЕР"

                    android:textSize="15sp"
                    android:textColor="@color/text_headings"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="З -> В"
                    android:id="@+id/windDirection"
                    android:padding="5dp"
                    android:textSize="25sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Скорость: 7 м/с"
                    android:id="@+id/wind"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundedshadow"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical"
                android:layout_marginVertical="5dp"
                android:padding="15dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ОБЛАЧНОСТЬ"
                    android:textSize="15sp"
                    android:textColor="@color/text_headings"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="0%"
                    android:id="@+id/cloudiness"
                    android:padding="5dp"
                    android:textSize="25sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Небо практически чистое."
                    android:id="@+id/cloudiness_description"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/feels_like_and_humidity"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundedshadow"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="5dp"
                android:orientation="vertical"
                android:layout_marginVertical="5dp"
                android:padding="15dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ОЩУЩАЕТСЯ КАК"
                    android:textSize="15sp"
                    android:textColor="@color/text_headings"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="-12°"
                    android:id="@+id/feels_like"
                    android:padding="5dp"
                    android:textSize="25sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/feels_like_description"
                    android:text="Из-за ветра кажется, что холоднее."
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundedshadow"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical"
                android:layout_marginVertical="5dp"
                android:padding="15dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ВЛАЖНОСТЬ"
                    android:textSize="15sp"
                    android:textColor="@color/text_headings"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="79%"
                    android:id="@+id/humidity"
                    android:padding="5dp"
                    android:textSize="25sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/humidity_description"
                    android:text="Точка росы сейчас: -8°"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedshadow"
            android:layout_margin="15dp"
            android:id="@+id/text_blocked"
            android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="Выберите город или настройте доступ к геолокации для показа погоды"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>