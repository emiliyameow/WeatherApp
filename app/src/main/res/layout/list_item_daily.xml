<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/roundedshadow"
    android:weightSum="5"

    android:layout_margin="5dp">
    <TextView
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_gravity="center_vertical"
        android:text="Сегодня"
        android:layout_marginStart="20dp"
        android:id="@+id/day" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="3"
        android:weightSum="4">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/night_weather_icon"
                android:src="@drawable/cloud_moon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginStart="20dp"
                android:text="14°"
                android:textColor="@color/text_headings"
                android:layout_gravity="center_vertical"
                android:id="@+id/temp_night" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/day_weather_icon"
                android:src="@drawable/cloud_sun"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginStart="20dp"
                android:layout_gravity="center_vertical"
                android:text="20°"
                android:textColor="@color/white"
                android:id="@+id/temp_day" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>